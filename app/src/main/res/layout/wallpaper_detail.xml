<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_grey"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/white">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ertugrul"
                />


        </androidx.cardview.widget.CardView>

    </RelativeLayout>



    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_55sdp"
        >


<!--        <ImageView-->
<!--            android:id="@+id/float_set"-->
<!--            android:layout_width="@dimen/_45sdp"-->
<!--            android:layout_height="@dimen/_45sdp"-->
<!--            android:layout_gravity="bottom|right"-->
<!--            android:layout_marginBottom="10dp"-->
<!--            android:layout_marginLeft="40dp"-->
<!--            android:layout_alignParentBottom="true"-->
<!--            android:background="@drawable/floating_circle"-->
<!--            android:elevation="8dp"-->
<!--            android:scaleType="center"-->
<!--            android:src="@drawable/set_icon" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
             android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
<!--            android:background="@drawable/bottombar_background"-->


            <com.varunest.sparkbutton.SparkButton
                android:id="@+id/spark_button"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                app:sparkbutton_activeImage="@drawable/filled"
                android:layout_centerInParent="true"
                android:background="@drawable/floating_circle"
                app:sparkbutton_inActiveImage="@drawable/unfill"
                app:sparkbutton_iconSize="@dimen/_30sdp"
                app:sparkbutton_primaryColor="@color/spark_secondary_color"
                app:sparkbutton_secondaryColor="@color/colorPrimaryDark" />



        </RelativeLayout>


        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab_menu_set"
            android:layout_marginLeft="@dimen/_40sdp"
            card_view:fab_addButtonSize="mini"
            android:layout_alignParentBottom="true"
            card_view:fab_labelsPosition="right"
            card_view:fab_addButtonColorNormal="@color/colorPrimaryDark"
            card_view:fab_labelStyle="@style/menu_labels_style"
            card_view:fab_addButtonColorPressed="@color/uvv_black">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fab1"
                card_view:fab_colorNormal="@color/white"
                card_view:fab_colorPressed="@color/colorPrimaryDark"
                card_view:fab_icon="@drawable/secure"
                card_view:fab_title="@string/fab_title2"
                card_view:fab_size="mini"
                />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fab2"
                card_view:fab_colorNormal="@color/white"
                card_view:fab_colorPressed="@color/colorPrimaryDark"
                card_view:fab_icon="@drawable/wall"
                card_view:fab_title="@string/fab_title"
                card_view:fab_size="mini"
                />


        </com.getbase.floatingactionbutton.FloatingActionsMenu>


        <ImageView
            android:id="@+id/float_set"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/floating_circle"
            android:scaleType="center"
            android:src="@drawable/set_icon" />




        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab_menu_share"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/_40sdp"
            android:layout_alignParentRight="true"
            fab:fab_icon="@drawable/ic_launcher"
            card_view:fab_addButtonColorNormal="@color/colorPrimaryDark"
            card_view:fab_labelStyle="@style/menu_labels_style"
            card_view:fab_addButtonSize="mini"
            card_view:fab_addButtonColorPressed="@color/uvv_black"
            >


            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:fab_colorNormal="@color/white"
                card_view:fab_colorPressed="@color/colorPrimaryDark"
                card_view:fab_icon="@drawable/sociall"
                card_view:fab_title="@string/fab_title4"
                card_view:fab_size="mini">

            </com.getbase.floatingactionbutton.FloatingActionButton>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/whatsapp"
                card_view:fab_colorNormal="@color/white"
                card_view:fab_colorPressed="@color/colorPrimaryDark"
                card_view:fab_icon="@drawable/social"
                card_view:fab_title="@string/fab_title3"
                card_view:fab_size="mini"
                >


            </com.getbase.floatingactionbutton.FloatingActionButton>


        </com.getbase.floatingactionbutton.FloatingActionsMenu>


        <ImageView
            android:id="@+id/float_share"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/floating_circle"
            android:scaleType="center"
            android:src="@drawable/share_icon" />

    </RelativeLayout>


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3146306479466166/6343432058">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>